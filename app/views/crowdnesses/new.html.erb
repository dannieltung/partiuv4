<div class="btn-home">
  <%= link_to root_path  do %>
    <%= image_tag "https://res.cloudinary.com/dbappiopini/image/upload/v1607399415/home_icon_white_ipejhz.png", class: 'icon-home' %>
  <% end %>
</div>
<div class="txt-items card">
  <%= simple_form_for [@spot, @crowdness] do |f| %>
    <div class="crowded">
      <%= f.input_field :level, collection: ['Safe', 'Atention', 'Danger'], as: :radio_buttons, wrapper: :horizontal_collection_inline %>
    </div>
    <br>
    <%= f.input :description, placeholder: 'Description', label: false %>
    <div class="icon-photo">
      <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'custom-file-input' }, label: false %>
    </div>
    <div class="icon-image">
      <img class="photo-tag" id='preview'>
    </div>
    <div class="txt-items btn-flex">
      <%= f.submit "Add âœ”", class: 'btn-blue' %>
    </div>
  <% end %>
</div>
