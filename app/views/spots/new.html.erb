<div class="map-back">
  <div class="btn-home">
    <%= link_to root_path  do %>
      <%= image_tag "https://res.cloudinary.com/dbappiopini/image/upload/v1607399415/home_icon_white_ipejhz.png", class: 'icon-home' %>
    <% end %>
  </div>
  <div class="txt-items card-map">
    <div class="icon-fex"></div>
    <h1 class="txt-bold-big txt-flex-center">Spot it!
    <%= image_tag "https://res.cloudinary.com/dbappiopini/image/upload/v1606502363/guy_icon_qhcxut.png", class: 'icon-home' %></h1>
    <%= simple_form_for @spot do |f| %>
      <%= f.input :name, placeholder: 'Name',label: false %>
      <%= f.input :street, placeholder: 'Street', label: false %>
      <%= f.input :number, placeholder: 'Number', label: false %>
      <%= f.input :city, placeholder: 'City', label: false %>
      <%= f.input :state,  placeholder: 'State', label: false %>
      <!-- <= f.input :address, label: 'Address' %> -->
      <%= f.simple_fields_for :crowdnesses do |g| %>
        <div class="txt-danger-normal crowded">
          <%= g.hidden_field :user_id, value: current_user.id %>
          <%= g.input_field :level, collection: ['Safe', 'Attention', 'Danger'], as: :radio_buttons, wrapper: :horizontal_collection_inline %>
        </div>
        <br>
        <%= g.input :description, placeholder: 'Description', label: false %>
        <div class="icon-photo">
          <%= g.input :photos, as: :file, input_html: { multiple: true, class: 'custom-file-input' }, label: false %>
        </div>
        <!-- <= g.input :photos, as: :file, input_html: { class: 'custom-file-input' } %> -->
        <div class="icon-image">
          <img class="photo-tag" id='preview'>
        </div>
      <% end %>
      <div class="txt-items btn-flex">
        <%= f.submit "Add âœ”", class: 'btn-blue' %>
      </div>
    <% end %>
  </div>
</div>
