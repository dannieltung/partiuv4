<%= simple_form_for @spot do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :street, label: 'Street' %>
  <%= f.input :number, label: 'Number' %>
  <%= f.input :city, label: 'City' %>
  <%= f.input :state, label: 'State' %>
  <!-- <= f.input :address, label: 'Address' %> -->
  <%= f.simple_fields_for :crowdnesses do |g| %>
    <%= g.hidden_field :user_id, value: current_user.id %>
    <%= g.input_field :level, collection: ['Not Crowded', 'Some Crowding', 'Crowded'], as: :radio_buttons %>
    <%= g.input :description, label: 'Description' %>
    <%= g.input :photos, as: :file, input_html: { multiple: true } %>
  <% end %>


